<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context=".AddActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:text="Thêm công việc"
            android:textColor="@color/font"
            android:textSize="30dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="5dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/tvTenCV"
            android:layout_width="match_parent"
            android:hint="Tên công việc"
            android:background="@drawable/rounded_edittext"
            android:layout_height="50dp"
            android:paddingLeft="10dp"
            android:layout_marginBottom="10dp"
            android:textColorHint="#43000000"
            />

        <EditText
            android:id="@+id/tvNoiDung"
            android:layout_width="match_parent"
            android:hint="Nội dung công việc"
            android:background="@drawable/rounded_edittext"
            android:layout_height="50dp"
            android:paddingLeft="10dp"
            android:layout_marginBottom="10dp"
            android:textColorHint="#43000000" />

        <EditText
            android:id="@+id/tvDate"
            android:layout_width="match_parent"
            android:hint="Ngày hoàn thành"
            android:background="@drawable/rounded_edittext"
            android:layout_height="50dp"
            android:paddingLeft="10dp"
            android:layout_marginBottom="10dp"
            android:textColorHint="#43000000"/>

        <Spinner
            android:id="@+id/spCategory"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/rounded_edittext"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:background="@drawable/rounded_edittext"
            android:padding="10dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Công tác:"
                android:textSize="20dp"
                android:textColor="#43000000"
                android:layout_marginStart="10dp"/>

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp">
                <RadioButton
                    android:id="@+id/rb1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="Làm chung"
                    android:textColor="#43000000"

                    />
                <RadioButton
                    android:id="@+id/rb2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Một mình"
                    android:textColor="#43000000"
                    />
            </RadioGroup>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:weightSum="2">

        <Button
            android:id="@+id/btAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/rounded_edittext"
            android:backgroundTint="#81C784"
            android:layout_marginRight="20dp"
            android:text="Thêm" />

        <Button
            android:id="@+id/btCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/rounded_edittext"
            android:backgroundTint="#90A4AE"
            android:text="Hủy" />
    </LinearLayout>
</LinearLayout>